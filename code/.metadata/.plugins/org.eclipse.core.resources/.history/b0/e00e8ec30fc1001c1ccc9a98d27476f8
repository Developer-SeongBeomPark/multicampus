package day13;

public class MyThread2 extends Thread {
  private int num;
  private String name;
  
  public MyThread2() {}
  public MyThread2(String name, int num) {
    this.num = num;
    this.name = name;
  }
  
  @Override
  public void run() {
    // TODO Auto-generated method stub
    for(int i = 0; i < num; i++) {
      System.out.println(name + " : " + i);
    }
  }
  public static void main(String[] args) {
    // TODO Auto-generated method stub
    MyThread2 t1 = new MyThread2("first", 1000);
    MyThread2 t2 = new MyThread2("second", 1000);
    MyThread2 t3 = new MyThread2("third", 1000);
    
    t1.start();
    t2.start();
    t3.start();
  }

}
