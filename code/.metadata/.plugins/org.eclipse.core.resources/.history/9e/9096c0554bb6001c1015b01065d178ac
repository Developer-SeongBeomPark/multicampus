package day04.test;

class Circle{
	private int r;
	
	public int getR() {
		return r;
	}

	public void setR(int r) {
		this.r = r;
	}

	public double area() {
		return r * r * Math.PI;
	}
	
	public double round() {
		return 2 * r * Math.PI;
	}
	
	public void print() {
		System.out.println("반지름 : " + r);
		System.out.println("넓이 : " + area());
		System.out.println("둘레 : " + round());
		
	}
}

class Triangle{
	
}

class Rectangle{
	private double x;
	private double y;
	public double getX() {
		return x;
	}
	public void setX(double x) {
		this.x = x;
	}
	public double getY() {
		return y;
	}
	public void setY(double y) {
		this.y = y;
	}
	
	
	public double area() {
		return x * y;
	}
	
	public double round() {
		return 2 * (x + y);
	}
}


