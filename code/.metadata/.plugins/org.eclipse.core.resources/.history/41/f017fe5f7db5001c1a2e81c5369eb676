package day03;

class Score{
	String name;
	int kuk;
	int eng;
	int math;
	
	public int total() {
		return kuk + eng + math;
	}
	
	public double avg() {
		return total() / 3.;
	}
	
	public void printScore() {
		System.out.println("국어점수 : " + kuk);
		System.out.println("영어점수 : " + eng);
		System.out.println("수학점수 : " + math);
		System.out.println("평균점수 : " + avg());
	}
}


public class ScoreCalc {

	public static void main(String[] args) {
		

	}

}
