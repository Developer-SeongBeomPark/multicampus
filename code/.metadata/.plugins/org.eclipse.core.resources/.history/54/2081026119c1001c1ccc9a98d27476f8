package day13;

class Car{
  private String carName;
  Car(){}
  Car(String carName){
    this.carName = carName;
  }
  }

class Truck extends Car implements Runnable{
  Truck(){}
  Truck(String carName){
    super(carName);
  }
  @Override
  public void run() {
    // TODO Auto-generated method stub
    for (int i = 0; i < 3; i++) {
      try {
          Thread.sleep(10);
          System.out.println(this.carName + "~~ 달립니다.");

      } catch (Exception e) {
      }
  }
  
}


