package day04.test;

import java.text.DecimalFormat;

class Circle{
	private int r;
	
	public int getR() {
		return r;
	}

	public void setR(int r) {
		this.r = r;
	}

	public double area() {
		return r * r * Math.PI;
	}
	
	public double round() {
		return 2 * r * Math.PI;
	}
	
	public void print() {
		DecimalFormat df = new DecimalFormat("####.##");
		System.out.println("=========원==========");
		System.out.println("반지름 : " + r);
		System.out.println("넓이 : " + df.format(area());
		System.out.println("둘레 : " + df.format(round());
		
	}
}

class Triangle{
	private double x;
	private double y;
	public double getX() {
		return x;
	}
	public void setX(double x) {
		this.x = x;
	}
	public double getY() {
		return y;
	}
	public void setY(double y) {
		this.y = y;
	}
	
	
	public double area() {
		return x * y / 2;
	}
	
	public double round() {
		return 3 * x;
	}
	
	public void print() {
		DecimalFormat df = new DecimalFormat("####.##");
		System.out.println("=========삼각형==========");
		System.out.println("밑변 : " + x);
		System.out.println("높이 : " + y);
		System.out.println("넓이 : " + area());
		System.out.println("둘레 : " + round());
		
	}
}

class Rectangle{
	private double x;
	private double y;
	public double getX() {
		return x;
	}
	public void setX(double x) {
		this.x = x;
	}
	public double getY() {
		return y;
	}
	public void setY(double y) {
		this.y = y;
	}
	
	
	public double area() {
		return x * y;
	}
	
	public double round() {
		return 2 * (x + y);
	}
	
	public void print() {
		System.out.println("가로 : " + x);
		System.out.println("세로 : " + y);
		System.out.println("넓이 : " + area());
		System.out.println("둘레 : " + round());
		
	}
}


